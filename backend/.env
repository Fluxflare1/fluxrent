# ===============================
# Django Core Settings
# ===============================
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=django-insecure-super-secret-key-change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,[::1]

# ===============================
# Database (Postgres)
# ===============================
# Docker DB
DATABASE_URL=postgres://postgres:postgres@db:5432/tenantdb

# Local DB (uncomment to use local instead of Docker)
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/tenantdb

# ===============================
# Redis (for Celery & Caching)
# ===============================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# For local Redis, uncomment:
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===============================
# JWT Authentication
# ===============================
JWT_SIGNING_KEY=supersecretjwtkey123!change_this
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7

# ===============================
# Email / Notifications
# ===============================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===============================
# Sentry (Error Logging)
# ===============================
SENTRY_DSN=

# ===============================
# Django Site / CORS
# ===============================
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===============================
# Logging
# ===============================
LOG_LEVEL=INFO
