# Backend environment variables (copy to .env and fill)
SECRET_KEY=changeme_replace_with_strong_secret
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Postgres)
POSTGRES_DB=fluxrent_db
POSTGRES_USER=fluxrent_user
POSTGRES_PASSWORD=fluxrent_pass
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_URL=postgres://fluxrent_user:fluxrent_pass@db:5432/fluxrent_db

# Redis (for Celery)
REDIS_URL=redis://redis:6379/0

# JWT / Django
SIMPLE_JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60

# Email - optionally configure for sending emails
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=youremail@example.com
EMAIL_HOST_PASSWORD=yourpassword
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=FluxRent <no-reply@yourdomain.com>

# UID sequence defaults
UID_TENANT_PADDING=5
